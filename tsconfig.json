{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue","src/**/*.ts"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "ES2015.Core"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
